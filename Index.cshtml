
            <article class="container cntme">
                @using (Html.BeginForm("Email", "Home", FormMethod.Post, new { id = "EmailForm" }))
                {
                    @Html.AntiForgeryToken()
                    <!-- Form inputs -->
                    <div class="row">
                        <div class="form-group col-md-6 col-md-offset-3">
                            @Html.TextBoxFor(x => x.Name, new { @class = "form-control", placeholder = "Name" })
                        </div>
                        <div class="form-group col-md-6 col-md-offset-3">
                            @Html.TextBoxFor(x => x.Email, new { @class = "form-control", placeholder = "Email" })
                        </div>
                        <div class="form-group col-md-6 col-md-offset-3">
                            @Html.TextAreaFor(x => x.Message, new { @class = "form-control", id = "message", rows = "8", placeholder = "Your Message Here" })
                        </div>
                    </div>
                    <!-- Button Send -->
                    <div class="row">
                        <div class="form-group col-md-6 col-md-offset-3">
                            <div id="successmsg"></div>
                            <input type="submit" name="submit" class="btn btnc2 with-br btn-ctc" value="Submit">
                            @*<input type="submit" name="submit" class="btn btn-primary pull-right" value="Submit">*@

                        </div>
                    </div>
                }
            </article>
